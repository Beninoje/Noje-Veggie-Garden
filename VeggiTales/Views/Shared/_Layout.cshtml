                    <div class="gallery-img">
                        <img src="~/img/footer-gallery-original-2.jpg" alt="">
                    </div>
                    <div class="gallery-img">
                        <img src="~/img/footer-gallery-original-1.jpg" alt="">
                    </div>
                    <div class="gallery-img">
                        <img src="~/img/footer-gallery-original-2.jpg" alt="">
                    </div>
                </div>
                <div class="overlay" id="overlay">
                    <div class="overlay-content">
                        <img src="" alt="" id="fullscreen-img">
