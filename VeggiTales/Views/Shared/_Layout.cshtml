<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VeggiTales</title>
    @*     <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- main stylesheet -->
    <link rel="stylesheet" href="~/VeggiTales.styles.css" asp-append-version="true" />
    <!-- font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- swiper -->
    <link rel="stylesheet" href="~/css/cdn.jsdelivr.net_npm_swiper@10.1.0_swiper-bundle.min.css">
    <link rel="stylesheet" href="~/css/swiper-bundle.min.css">
</head>
<body>
    <header>
        <nav class="nav">
            <div class="logo">
                <button class="open-nav"><i class="fa-solid fa-bars"></i></button>
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-leaf"></i>
                    <span>Veggitales</span>
                </a>
            </div>
            <div class="nav-links">
                <ul class="nav-list">
                    <li class="nav-link">
                        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-link">
                        <a asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
                    </li>
                    <li class="nav-link">
                        <a asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                    </li>
                    <li class="nav-link">
                        <a asp-area="" asp-controller="Home" asp-action="Index">Contact Us</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-link">
                            <a asp-area="" asp-controller="Orders" asp-action="Index">Orders</a>
                        </li>
                    }
                    <li class="nav-link-search">
                        <form method="get" asp-controller="Shop" asp-action="Search">
                            <input type="text" name="searchTerm" placeholder="Search products...">
                            <button type="submit">Search</button>
                        </form>
                    </li>

                </ul>
            </div>
            <partial name="_LoginPartial" />
        </nav>
        <div class="mobile-nav">
            <div class="logo">
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-leaf"></i>
                    <span>Veggitales</span>
                </a>
                <button class="close-nav"><i class="fa-solid fa-xmark"></i></button>
            </div>
            <div class="nav-links">
                <ul class="nav-list">
                    <li class="nav-link">
                        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-link">
                        <a asp-area="" asp-controller="Home" asp-action="Index">Categories</a>
                    </li>
                    <li class="nav-link">
                        <a asp-area="" asp-controller="Home" asp-action="Index">Products</a>
                    </li>
                    <li class="nav-link">
                        <a asp-area="" asp-controller="Home" asp-action="Index">Contact Us</a>
                    </li>
                </ul>
            </div>

        </div>
    </header>
